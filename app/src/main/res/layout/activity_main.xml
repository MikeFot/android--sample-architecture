<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michaelfotiadis.samplearchitecture.ui.main.MainActivity">


    <ImageButton
        android:id="@+id/button_chat"
        style="@style/Base.Widget.AppCompat.ImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:background="@color/accent"
        app:layout_constraintEnd_toStartOf="@+id/button_posts"
        app:layout_constraintStart_toEndOf="@+id/button_signup"
        app:layout_constraintTop_toTopOf="@+id/button_signup"
        app:srcCompat="@drawable/ic_chat_white_24dp"/>

    <ImageButton
        android:id="@+id/button_posts"
        style="@style/Base.Widget.AppCompat.ImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="32dp"
        android:background="@color/accent"
        app:layout_constraintBottom_toBottomOf="@+id/button_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/button_chat"
        app:srcCompat="@drawable/ic_featured_play_list_white_24dp"/>

    <ImageButton
        android:id="@+id/button_signup"
        style="@style/Base.Widget.AppCompat.ImageButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:background="@color/accent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_person_add_white_24dp"/>
</android.support.constraint.ConstraintLayout>
